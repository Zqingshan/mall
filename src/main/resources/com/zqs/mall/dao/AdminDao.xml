<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zqs.mall.dao.AdminDao">
    <select id="queryAdminByUsername" resultType="com.zqs.mall.model.Admin" parameterType="com.zqs.mall.model.Admin">
        select password
        from db_mall.admin
        where username = #{username}
    </select>

    <select id="queryAllAdmins" resultType="com.zqs.mall.model.Admin" parameterType="com.zqs.mall.model.Admin">
        select *
        from db_mall.admin
        <where>
            <if test="id != null and id != ''">
                id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username like concat("%" , #{username} , "%")
            </if>
            <if test="nickname != null and nickname != ''">
                and nickname like concat("%" , #{nickname} , "%")
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>

    <insert id="insertAdmin" parameterType="com.zqs.mall.model.Admin">
        insert into db_mall.admin
        values (null, #{username}, #{nickname}, #{password})
    </insert>

    <delete id="deleteAdminById" parameterType="integer">
        delete
        from db_mall.admin
        where id = #{id}
    </delete>

    <select id="queryAdminById" resultType="com.zqs.mall.model.Admin">
        select *
        from db_mall.admin
        where id = #{id}
    </select>

    <update id="updateAdmin" parameterType="com.zqs.mall.model.Admin">
        update db_mall.admin
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="password != null and password != ''">
                password = #{password}
            </if>
        </set>
        <where>
            <if test="id != null and id != ''">
                id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
        </where>
    </update>

    <select id="queryNickNameByUname" resultType="com.zqs.mall.model.Admin" parameterType="com.zqs.mall.model.Admin">
        select nickname
        from db_mall.admin
        where username = #{username}
    </select>
</mapper>